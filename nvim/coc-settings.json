// JSON
{
  "vimlsp.diagnostic.enable": true,
  "diagnostic.enableSign": true,
  "diagnostic.autoRefresh": true,
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.enableMessageDialog": true,

  // coc-snippets
  "snippets.ultisnips.enable":true,
  "suggest.snippetsSupport": true,
  "snippets.extends": {
    // "cpp" : ["c"]
  },
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips"
  ],

  // coc-clangd
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.0/clangd_14.0.0/bin/clangd", // CocCommand clangd.install ----> installation path
  "clangd.disableSnippetCompletion": false,

  // coc-pyright
  "python.pythonPath": "/usr/local/Cellar/python@3.9/3.9.12/bin/python3.9",
  "pyright.enable": true,
  "pyright.completion.importSupport": true
}
