// JSON
{
  "vimlsp.diagnostic.enable": true,
  "diagnostic.enableSign": true,
  "diagnostic.autoRefresh": true,
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.enableMessageDialog": true,

  // coc-snippets
  "snippets.ultisnips.enable":true,
  "suggest.snippetsSupport": true,
  "snippets.extends": {
    // "cpp" : ["c"]
  },
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips"
  ],

  // coc-clangd
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",
  "clangd.disableSnippetCompletion": true,

  // coc-pyright
  "pyright.enable": true,
  "pyright.completion.importSupport": true
}
