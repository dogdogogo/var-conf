" === vim-illuminate
" ===

augroup hi_cur_word
  autocmd!
  autocmd VimEnter * hi illuminatedCurWord cterm=underline gui=underline guibg=#000000
augroup END

augroup hi_illuminate_word
  autocmd!
  autocmd VimEnter * hi illuminatedWord cterm=underline gui=underline guifg=#FF6F00
augroup END

let g:Illuminate_ftblacklist = []
let g:Illuminate_delay = 0
let g:Illuminate_highlightUnderCursor = 1
let g:Illuminate_insert_mode_highlight = 1

